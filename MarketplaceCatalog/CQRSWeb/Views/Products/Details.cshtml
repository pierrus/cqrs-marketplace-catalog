@model CQRSCode.ReadModel.Dtos.ProductDto
@{
    ViewData["Title"] = "Home Page";
}

<h2>Product details</h2>

<p>
    Id: @Model.Id<br />
    Name: @Model.Name<br />
    Description: @Model.Description<br />
    IsActivated: @Model.IsActivated<br />
    IsVisible: @Model.IsVisible<br />
</p>

<h2>@Model.Offers?.Count() Offer(s)</h2>
@if (Model.Offers != null && Model.Offers.Count() > 0)
{
    foreach (var offer in Model.Offers)
    {
        <p>
            Id: @offer.Id<br />
            Merchant: @offer.MerchantName<br />
            Stock: @offer.Stock<br />
            Price: @offer.Price
        </p>
    }
} 
else
{
    <p>
        No offers
    </p>
}

<br />
@Html.ActionLink("Add a new offer", "AddOffer", new { productId = Model.Id })

<br /><br />
@Html.ActionLink("Edit", "Edit")